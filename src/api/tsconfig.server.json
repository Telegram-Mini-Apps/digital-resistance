{
  "compilerOptions": {
    "outDir": "../../dist",
    "module": "Node16",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ]
  },
  "exclude": [
    "build/*",
    "node_modules/*",
    "node_modules/@types/*"
  ],
  "include": [
    "index.ts",
    "../../types/entities.ts",
    "@types/node"
  ]
}
